<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/titlebar"/>
    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RadioGroup
        android:id="@+id/rg_main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#22000000"
        android:gravity="center_vertical">
        <RadioButton
            android:id="@+id/rb_video"
            android:drawableTop="@drawable/rb_video_selector"
            android:text="本地视频"
            style="@style/bootom_tab_style"/>
        <RadioButton
            android:id="@+id/rb_caidan"
            android:text="本地音乐"
            android:drawableTop="@drawable/rb_caidan_selector"
            style="@style/bootom_tab_style"/>
        <RadioButton
            android:id="@+id/rb_shequ"
            android:text="网络视频"
            android:drawableTop="@drawable/rb_shequ_selector"
            style="@style/bootom_tab_style"/>
        <RadioButton
            android:id="@+id/rb_geren"
            android:text="网络音乐"
            android:drawableTop="@drawable/rb_geren_selector"
            style="@style/bootom_tab_style"/>
    </RadioGroup>
</LinearLayout>